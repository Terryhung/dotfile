#!/bin/bash

echo "Creating new folder in $PWD/$1"
mkdir -p $PWD/$1
echo "-----------------------------"

echo "Entering $PWD/$1"
cd $PWD/$1
echo "-----------------------------"

echo "Adding .envrc in $PWD"
cat > $PWD/.envrc <<ENVRC
export GOPATH=\$PWD
export PATH=\$PWD/bin:\$PATH
ENVRC

direnv allow
echo "-----------------------------"

echo "Creating $PWD/src/github.com/lazywei"
mkdir -p $PWD/src/github.com/lazywei
echo "-----------------------------"
